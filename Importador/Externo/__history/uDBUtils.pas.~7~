unit uDBUtils;

interface

uses FireDAC.Comp.Client;

type
  TDBUtils = class
  public
    class function GetMaxID(TableName: String): String; static;
    class procedure SetID(Query: TFDQuery; const TableName: String); static;
  end;

implementation

class function TDBUtils.GetMaxID(TableName: String): String;
var
  Query: TFDQuery;
begin
  Query := NewQuery;
  Result := Query.FieldByName('ID').AsInteger;
end;

class procedure TDBUtils.SetID(Query: TFDQuery; const TableName: String);
begin
  Query.FieldByName('ID').AsInteger := GetMaxID(TableName) + 1;
end;

end.
